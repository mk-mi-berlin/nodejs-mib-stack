<div class="copytext_3-spaltig">
  	<div class="row" style="background-color: <%=el.primary.background_color%>">
  		
      <%if(el.primary.titel[0].text) {%>
  		<div class="col-12 heading p-3">
  			<h<%=el.primary.titel[0].type.slice(-1)%>>
  			 <%-el.primary.titel[0].text%>
  		  </h<%=el.primary.titel[0].type.slice(-1)%>>
      </div>
      <%} else {%>
      <div class="col-12 heading p-3">
        <%-PrismicDOM.RichText.asHtml(el.primary.richtext_heading, ctx.linkResolver, ctx.htmlSerializer)%>
      </div>
      <%}%> 
  		
  	</div>

  	<div class="d-flex flex-wrap flex-row justify-content-center" style="background-color: <%=el.primary.background_color%>">
  		<% if(el.primary.number_of_columns == "2 Spalten") { %>
  		<!--div class="col-1"></div-->
  		<div class="col-md-5 col-12 p-4 pl-5">
  			<%-PrismicDOM.RichText.asHtml(el.items[0].copytext, ctx.linkResolver, ctx.htmlSerializer)%>
  		</div>
  		<div class="col-md-5 col-12 p-4 ">
  			<%-PrismicDOM.RichText.asHtml(el.items[1].copytext, ctx.linkResolver, ctx.htmlSerializer)%>
      </div>
  		<% } else if(el.primary.number_of_columns == "3 Spalten") {%>
  		<!--div class="col-1"></div-->
  		<div class="col-md-3 col-8 p-4">
  			<%-PrismicDOM.RichText.asHtml(el.items[0].copytext, ctx.linkResolver, ctx.htmlSerializer)%>
  		</div>
  		<div class="col-md-3 col-8 p-4 ">
  			<%-PrismicDOM.RichText.asHtml(el.items[1].copytext, ctx.linkResolver, ctx.htmlSerializer)%>
      </div>
  	  <div class="col-md-3 col-8 p-4 ">
  			<%-PrismicDOM.RichText.asHtml(el.items[2].copytext, ctx.linkResolver, ctx.htmlSerializer)%>
      </div>
      <%}%>
  	</div>
</div>