    jQuery.ajax({
        type: "POST",
        url: 'http://localhost:8000/ticket_ajax.php',
        dataType: 'json',
        data: {functionname: 'queues', arguments: [1, 2]},
        success: function(obj) {
            //alert(obj);
            var $select = $('#down');
            $.each(obj,function(key, value) 
            {
                $select.append('<option value=' + key + '>' + value + '</option>');
            });
        }
        })
    </script>
